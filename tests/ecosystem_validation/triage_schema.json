{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Move Clippy Ecosystem Validation Triage",
  "description": "Manual classification of lint findings as True Positive, False Positive, or Informational",
  "type": "object",
  "properties": {
    "metadata": {
      "type": "object",
      "properties": {
        "generated": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when triage was performed"
        },
        "triager": {
          "type": "string",
          "description": "Person who performed the triage"
        },
        "move_clippy_version": {
          "type": "string",
          "description": "Version of move-clippy used"
        },
        "notes": {
          "type": "string",
          "description": "General notes about the triage process"
        }
      },
      "required": ["generated", "move_clippy_version"]
    },
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier: repo_file_line_lint"
          },
          "repo": {
            "type": "string",
            "description": "Repository name"
          },
          "file": {
            "type": "string",
            "description": "File path relative to repo root"
          },
          "line": {
            "type": "integer",
            "description": "Line number where lint fired"
          },
          "lint": {
            "type": "string",
            "description": "Lint rule name"
          },
          "message": {
            "type": "string",
            "description": "Lint message"
          },
          "classification": {
            "type": "string",
            "enum": ["TP", "FP", "INFO", "SKIP"],
            "description": "TP=True Positive (real bug), FP=False Positive (incorrect), INFO=Informational (not a bug but useful), SKIP=Unable to determine"
          },
          "severity": {
            "type": "string",
            "enum": ["critical", "high", "medium", "low"],
            "description": "Severity if TP, ignored otherwise"
          },
          "rationale": {
            "type": "string",
            "description": "Explanation for the classification"
          },
          "fixed_in_commit": {
            "type": "string",
            "description": "Git commit hash where this was fixed (if applicable)"
          },
          "audit_reference": {
            "type": "string",
            "description": "Link to audit report if this was found in audit"
          }
        },
        "required": ["id", "repo", "file", "line", "lint", "message", "classification", "rationale"]
      }
    }
  },
  "required": ["metadata", "findings"]
}
